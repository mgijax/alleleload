#format: sh
###########################################################################
#
# Configuration.default
#
###########################################################################

###########################################################################
#
#  If the MGICONFIG environment variable does not have a local override,
#  use the default "live" settings.
#
###########################################################################
if [ "${MGICONFIG}" = "" ]
then
    MGICONFIG=/usr/local/mgi/live/mgiconfig
    export MGICONFIG
fi

. ${MGICONFIG}/master.config.sh

###########################################################################
#
# Directory paths
#
###########################################################################

FILEDIR=${DATALOADSOUTPUT}/mgi/alleleload/test2
ARCHIVEDIR=${FILEDIR}/archive
INPUTDIR=${FILEDIR}/input
OUTPUTDIR=${FILEDIR}/output
LOGDIR=${FILEDIR}/logs
RPTDIR=${FILEDIR}/reports
QCOUTPUTDIR=${RPTDIR}

export FILEDIR ARCHIVEDIR INPUTDIR OUTPUTDIR LOGDIR RPTDIR QCOUTPUTDIR 

###########################################################################
#
# Input/Output files
#
###########################################################################

# input file from the test directory
#
IKMC_INPUT_FILE=${ALLELELOAD}/test/DAL_test_logic.txt
IKMC_COPY_INPUT_FILE=${INPUTDIR}/DAL_test_logic.txt
INPUTFILE=${INPUTDIR}/mgi_allele_test.txt

export IKMC_INPUT_FILE IKMC_COPY_INPUT_FILE INPUTFILE

# Log files
#
LOG_PROC=${LOGDIR}/test.proc.log
LOG_DIAG=${LOGDIR}/test.diag.log
LOG_CUR=${LOGDIR}/test.cur.log
LOG_VAL=${LOGDIR}/test.val.log
LOG_IKMC=${LOGDIR}/test.test.log
SKIP_DIAG=${LOGDIR}/test.skip.log
EXISTS_DIAG=${LOGDIR}/test.exist.log

export LOG_PROC LOG_DIAG LOG_CUR LOG_VAL LOG_IKMC SKIP_DIAG EXISTS_DIAG

CREATEDBY=ikmc_alleleload
JNUMBER=J:204739
export CREATEDBY JNUMBER

###########################################################################
#
#  MISCELLANEOUS SETTINGS
#
###########################################################################

#  The name of the job stream for the load
JOBSTREAM=alleleload
export JOBSTREAM

#  The name of the load for the subject of an email notification
MAIL_LOADNAME="TEST-Allele Load"

#  Recipient list for mailing the log files (comma-separated)
MAIL_LOG_CUR="mgiadmin@jax.org"

export MAIL_LOADNAME MAIL_LOG_PROC MAIL_LOG_CUR

INSTALLDIR=${ALLELELOAD}
export INSTALLDIR

